/* pages/chat/chat.wxss */
.container1 {
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  min-width: 320rpx;
  min-height: 20vh;
}
.title{
  font-size: 1.5em;
  line-height: 1.3;
  font-weight: bold;
  margin-left: 25rpx;
}
#main{
  color:#0C0C0C
}
#vice{
  color:#828282;
}
.space{
  height: 25px;
}
.box{
  display: flex;
  flex-direction: column;
  font-size: 1.1em;
  font-weight: bold;
}
.movable-area{
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.movable-view{ 
  pointer-events:auto;
  height: 100rpx;
  width: 100rpx;
  position: sticky;
  top: 1000rpx;
  left: 570rpx;
  border: 3rpx solid #113285;
  border-radius: 50rpx;
  background-color: #FCFAF2;
}
#plus{
  height: 100rpx;
  width: 100rpx;
  width: 100%;
  top: 0;
  left: 0;
}
.article {
  border: 3rpx solid #113285;
  border-radius: 10rpx;
  padding: 15rpx;
  width: 600rpx;
  height: 190rpx;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.articleText{
  display: flex;
  flex-direction: column;
  margin-left: 5rpx;
  margin-top: 2rpx;
}
.exampleTextTitle{
  margin-left: 10rpx;
  font-size: 1.1em;
  font-weight: bold;
}
.exampleText{
  margin-top: 5rpx;
  margin-left: 10rpx;
  height: 85rpx;
  font-size: 0.9em;
  font-weight: normal;
}

