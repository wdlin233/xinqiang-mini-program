/* pages/article/article.wxss */
.container1 {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  min-width: 320rpx;
  min-height: 20vh;
}
.title{
  font-size: 1.5em;
  line-height: 1.3;
  font-weight: bold;
  margin-left: 25rpx;
}
#main{
  color:#0C0C0C
}
#vice{
  color:#828282;
}
.space{
  height: 25rpx;
}
.box{
  display: flex;
  flex-direction: column;
}
.article {
  border: 3rpx solid #113285;
  border-radius: 10rpx;
  padding: 15rpx;
  min-width: 600rpx;
  max-width: 800rpx;
  min-height: 190rpx;
  max-height: 250rpx;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

