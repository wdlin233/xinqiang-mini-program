/* pages/shop/shop.wxss */
.container1 {
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  min-width: 320rpx;
  min-height: 20vh;
}
.title{
  font-size: 1.5em;
  line-height: 1.3;
  font-weight: bold;
  margin-left: 25rpx;
}
#main{
  color:#0C0C0C
}
#vice{
  color:#828282;
}
.space{
  height: 25px;
}
.box{
  display: flex;
  flex-direction: column;
  font-size: 1.1em;
  font-weight: bold;
}
.commodityRow{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.commodity{
  border: 3rpx solid #113285;
  border-radius: 10rpx;
  width: 300rpx;
  height: 400rpx;
  box-shadow: 5px 5px 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  margin-right: 15rpx;
  margin-left: 5rpx;
}
.exampleImage{
  /* border: 3rpx solid #faca82;
  border-radius: 10rpx; */
  width: 250rpx;
  min-width: 150rpx;
  height: 250rpx;
  min-height: 150rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
}
.shopText{
  display: flex;
  flex-direction: column;
  margin-left:15rpx;
  margin-right: 15rpx;
  margin-top: 6rpx;
}
.exampleTextTitle{
  margin-left: 10rpx;
  font-size: 1.0em;
  font-weight: bold;
}
.exampleText{
  margin-top: 3rpx;
  margin-left: 10rpx;
  height: 85rpx;
  font-size: 0.8em;
  font-weight:normal;
}
.confirmButton1{
  position: relative;
  margin-bottom: 30rpx;
  left: -50rpx;
}
.confirmButton2{
  position: relative;
  margin-bottom: 100rpx;
  left: -50rpx;
}